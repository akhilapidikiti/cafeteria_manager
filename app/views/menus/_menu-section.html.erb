<section class="MenuSection">
   <ul class="Menu-UnorderedList">
      <% Menu.all.each do |menu| %>
        <li class="MenuItem">
          <div class="MenuItem-container">
           <%= menu.name %>:
           <h3 class="Link-Item"><%= link_to "click here", "/menus/#{menu.id}" %></h3>
           <%= form_with(url: "/menus/#{menu.id}", method: "delete") do %>
              <%= image_submit_tag("trash.svg",class: "Menu-delete")%>
          <% end %>
          </div>
        </li>
       <% end %>
    </ul>
</section>
